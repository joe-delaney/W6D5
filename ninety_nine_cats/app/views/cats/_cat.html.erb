<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Color</td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><%= cat.age %></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%= cat.sex %></td>
        </tr>
        <tr>
            <td><%= cat.description %></td>
        </tr>
        <tr>
            <td>
              <% if action == 'show' %>
                <a href="<%= cats_url %>">All Cats</a>
              <% else %>
                <a href="<%= cat_url(cat) %>">Show Cat</a>
              <% end %>
            </td>
        </tr>
    </tbody>
</table>

